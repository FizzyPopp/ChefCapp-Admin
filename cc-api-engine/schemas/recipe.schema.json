{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "recipe.schema.json",
    "type": "object",
    "title": "recipe",
    "description": "A collection of ingredients, steps, and attributes that comprise a guide to cooking a dish.",
    "default": {},

    "required": [
        "type",
        "name",
        "tags",
        "time",
        "ingredients",
        "steps"
    ],

    "additionalproperties": true,

    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "$ref": "type.schema.json" },
        "name": { "$ref": "name.schema.json" },
        "tags": { "$ref": "tags.schema.json" },
        "time": { "$ref": "time.schema.json" },
        "yield": {
            "type": "integer",
            "minimum": 1
        },
        "images": { "type": "string" },
        "calories": { "$ref": "calories.schema.json" },
        "ingredients": { "$ref": "ingredientList.schema.json" },
        "steps": { "$ref": "idList.schema.json" }
    }
}
