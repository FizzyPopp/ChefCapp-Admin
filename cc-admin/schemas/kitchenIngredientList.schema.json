{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "kitchenIngredientList.schema.json",
    "type": "object",
    "title": "kitchenIngredientList",
    "description": "object containing ingredients as objects with name, amount, etc., with some ordering and organization applied",
    "default": {
        "keys": []
    },

    "examples": [
        {
            "keys": [
                "07538800-5e44-46d2-b837-4e1b37d98d0d",
                "7913d04d-65ce-4fc3-b16a-db7f810ae314",
                "8e5a3441-1c8a-4c03-b84a-97905eb1dc00",
                "2046aadb-a599-4b9e-ad7c-6734d5a2df00"
            ]
        }
    ],

    "required": [
        "type",
        "keys"
    ],

    "additionalProperties": false,

    "properties": {
        "type": { "$ref": "type.schema.json" },
        "keys": { "$ref": "idList.schema.json" }
    },

    "patternProperties": {
        "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}" : {
            "type": "object",
            "required": [
                "id",
                "name",
                "unit",
                "isSnack"
            ],

            "properties": {
                "id": { "type": "string", "format": "uuid" },
                "name": { "$ref": "name.schema.json" },
                "unit": { "$ref": "unit.schema.json" },
                "quantity": {
                    "type": "number",
                    "exclusiveminimum": 0
                },
                "bulk": { "type": "boolean" },
                "isSnack": { "type": "boolean" }
            },

            "if": { "properties": { "bulk": { "const": true } } },
            "then": { "properties": { "standardDeviation": { "type": "number" } } }
        }
    }
}
