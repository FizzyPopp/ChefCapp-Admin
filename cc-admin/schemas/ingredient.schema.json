{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "ingredient.schema.json",
    "type": "object",
    "title": "ingredient",
    "description": "canonical description of a single ingredient, all quantities normalized against one unit of ingredient, whatever that unit may be",

    "required": [
        "id",
        "name",
        "category",
        "unit"
    ],

    "additionalProperties": true,
    "properties": {
        "hash": { "$ref": "hash.schema.json" },
        "id": { "type": "string", "format": "uuid" },
        "type": { "$ref": "type.schema.json" },
        "name": { "$ref": "name.schema.json" },
        "allergens": { "$ref": "vocabulary.allergens.schema.json" },
        "category": { "$ref": "vocabulary.ingredientCategory.schema.json" },
        "density": { "type": "number" },
        "unit": { "$ref": "#/$defs/unit" },
        "tags": {
            "type": "array",
            "items": { "type": "string" }
        }
    },

    "$defs": {
        "unit": {
            "title": "unit",
            "description": "unit object which contains any unit that may be used to refer to a specific ingredient",

            "type": "object",


            "properties": {
                "singular": { "type": "string" },
                "plural": { "type": "string" },
                "verbiage": { "enum": ["name", "specific", "SI"] },
                "quantityClass": { "$ref": "vocabulary.quantityClass.schema.json" },
                "conversionFactorTo": {
                    "type": "object",
                    "description": "conversion factors from the default unit to other classes",

                    "properties": {
                        "cooking": { "type": "number", "exclusiveMinimum": 0 },
                        "portion": { "type": "number", "exclusiveMinimum": 0 },
                        "storage": { "type": "number", "exclusiveMinimum": 0 },
                        "bulk": { "type": "number", "exclusiveMinimum": 0 },
                        "SI": { "type": "number", "exclusiveMinimum": 0 }
                    }
                },
                "additional": {
                    "type": "object",
                    "properties": {
                        "cooking": { "$ref": "name.schema.json" },
                        "portion": { "$ref": "name.schema.json" },
                        "storage": { "$ref": "name.schema.json" },
                        "bulk": { "$ref": "name.schema.json" },
                        "SI": { "type": "string" }
                    }
                }
            }
        }
    }
}
