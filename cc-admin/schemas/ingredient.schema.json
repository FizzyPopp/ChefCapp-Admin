{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "ingredient.schema.json",
    "type": "object",
    "title": "ingredient",
    "description": "canonical description of a single ingredient, all quantities normalized against one unit of ingredient, whatever that unit may be",

    "required": [
        "name",
        "category",
        "unit"
    ],

    "additionalProperties": true,
    "properties": {
        "type": {
            "description" : "type field to identify objects in code",
            "$ref": "type.schema.json"
        },

        "hash": {
            "description": "Hashed key for the object from a canonical form",
            "$ref": "hash.schema.json"
        },

        "id": {
            "description": "Permanent ID for an ingredient gestalt",
            "type": "string", "format": "uuid"
        },

        "name": {
            "description": "Human readable name",
            "$ref": "name.schema.json"
        },

        "allergens": {
            "description": "Allergen categories this ingredient belongs to.",
            "$ref": "vocabulary.allergens.schema.json"
        },

        "category": {
            "description": "Grocery store categories this ingredient belongs to.",
            "$ref": "vocabulary.ingredientCategory.schema.json"
        },
       
        "tags": {
            "type": "array",
            "items": { "type": "string" }
        },

        "unit": {
            "type": "object",
            "description": "This is an object, the propeties and fields have been moved to below to keep this part a bit neater",
           
            "properties": {
                "density": {
                    "description": "SI standard kg/m^3",
                    "type": "number"
                },

                "cooking": {
                    "description": "Smallest usable unit for a given ingredient.",
                    "type": "object",
                    "properties": {
                        "singular": { "type": "string" },
                        "singular": { "type": "string" },
                        "unitCategory": { "$ref": "vocabulary.unitCategory.schema.json" }
                    }
                },

                "portion": {
                    "description": "Unit scale fit for roughly one person for one meal.",
                    "type": "object",
                    "properties": {
                        "singular": { "type": "string" },
                        "singular": { "type": "string" },
                        "unitCategory": { "$ref": "vocabulary.unitCategory.schema.json" }
                    }
                },

                "storage": {
                    "description": "The amount that comes from an average grocery store purchase.",
                    "type": "object",
                    "properties": {
                        "singular": { "type": "string" },
                        "singular": { "type": "string" },
                        "unitCategory": { "$ref": "vocabulary.unitCategory.schema.json" }
                    }
                },

                "bulk": {
                    "description": "The amount that comes from an average costco purchase.",
                    "type": "object",
                    "properties": {
                        "singular": { "type": "string" },
                        "singular": { "type": "string" },
                        "unitCategory": { "$ref": "vocabulary.unitCategory.schema.json" }
                    }
                },

                "conversionFactorTo": {
                    "type": "object",
                    "description": "conversion factors from the standard SI to other classes",
                    "properties": {
                        "default": { "type": "number", "exclusiveMinimum": 0 },
                        "cooking": { "type": "number", "exclusiveMinimum": 0 },
                        "portion": { "type": "number", "exclusiveMinimum": 0 },
                        "storage": { "type": "number", "exclusiveMinimum": 0 },
                        "bulk": { "type": "number", "exclusiveMinimum": 0 }
                    }
                }
            }
        }
    }
}
